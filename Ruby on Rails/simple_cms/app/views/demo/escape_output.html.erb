<% evil_string = "<script>alert('Gotcha!');</script>".html_safe
      # here tell rails that this string is safe 100%. Even you use h(evil_string), rails consider string is safe
      %>
<% good_string = "<strong>Welcome to my site!</strong>".html_safe %>

<%# raw(evil_string) %><br />
<%# raw(good_string) %><br />

<%= evil_string.html_safe? %><br />
<%= good_string.html_safe? %><br />

<%# h(evil_string) %><br />
<%# h(good_string) %><br />

<hr />

<% simple_string = '<strong>Please</strong> visit <a href="http://example.com">us</a>.' %>

<%= strip_links(simple_string)
    #remove links from html
    %> <br />
<%= strip_tags(simple_string)
    #remove tags from html
    %>

<hr />

<% #By default remove js. if you want to remove all html tags also, you should set :tags by empty hash %>
  <%= sanitize(good_string) %><br />
  <%= sanitize(simple_string, :tags => []) %><br />
  <%= sanitize(simple_string, :tags => ['strong', 'em', 'a'])
      #Will skip this tag from escaping and allow use this tags.
      %><br />
